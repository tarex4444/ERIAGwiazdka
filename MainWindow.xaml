<Window x:Class="Algorytm_A_gwiazdka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Algorytm_A_gwiazdka"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="500" Width="424">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Canvas for the grid -->
        <Canvas x:Name="PathCanvas" Background="LightGray" HorizontalAlignment="Left" Margin="5 5 5 5" />

        <!-- Button to trigger the algorithm -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="ReadButton" Content="Wczytaj mape" Click="ReadButton_Click" Width="100" Height="30" Margin="10" />
            <Button x:Name="RunButton" Content="Uruchom A*" Click="RunButton_Click" Width="100" Height="30" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
